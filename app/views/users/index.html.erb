<div class="container">
	<div class="row">

	    <div class="col-md-3" >


		</div>

		<h1>User info</h1>
        <%= attachment_image_tag @user, :profile_image,:fill, 80, 80, fallback: "no_image.jpg" %>


  <div>
    name <%= @user.name %>
  </div>

  <div>
    introduction <%= @user.introduction%>
  </div>

      <% if current_user.id == @user.id %>
        <%= link_to edit_user_path(current_user.id) do %>
        <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
        <% end %>
      <% else %>


                <%= link_to user_path(current_user.id) do %>
        <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
        <% end %>
      <% end %>

      <%= link_to '',edit_user_path(current_user.id),class:"btn btn-outline-secondary btn-block fas fa-user-cog edit_user_10317" %>


		<h1>New book</h1>
        <!-- form_with部分 -->
        <%= form_with model: @book, url:'/books', local:true do |f| %>
        <h4>Titlle</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
         <% end %>


		<div class="col-md-8 offset-md-1" >
			<h2>Users</h2>

			<table class="table table-striped">
				<tr>
					<th>image</th>
					<th>name</th>
					<th></th>
				</tr>
				<% @users.each do |user| %>
				<tr>
					<td><%= attachment_image_tag @user, :profile_image,:fill, 50, 50, fallback: "no_image.jpg" %></td>
					<td><%= user.name %></td>
					<td><%= link_to 'Show', user_path(user) %></td>
				</tr>
				<% end %>
			</table>
	    </div>
	 </div>
</div>


