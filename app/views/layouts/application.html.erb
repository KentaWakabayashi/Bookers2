<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a>Bookers</a>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>

            <li>
              <%= link_to user_path(current_user.id) do %>
                <span class="fas fa-home nav-link text-light" aria-hidden="true"> Home</span>
              <% end %>
            </li>
            <li>
              <%= link_to users_path do %>
                <span class="fas fa-users nav-link text-light" aria-hidden="true"> Users</span>
              <% end %>
            </li>
            <li>
              <%= link_to books_path do%>
                <span class="fas fa-book-open nav-link text-light" aria-hidden="true"> Books</span>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do%>
                <span class="fas fa-sign-out-alt nav-link text-light" aria-hidden="true"> logout</span>
              <% end %>
            </li>

          <% else %>
            <li>
              <%= link_to root_path do%>
                <span class="fas fa-home nav-link text-light" aria-hidden="true">Home</span>

              <% end %>
            </li>
            <li>
              <%= link_to top_about_path do%>
                <span class="fas fa-link nav-link text-light" aria-hidden="true">About</span>

              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path do%>
                <span class="fas fa-user-plus nav-link text-light" aria-hidden="true">Sign Up</span>

              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path do%><span class="fas fa-sign-in-alt nav-link text-light" aria-hidden="true">Login</span>

            <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  </header>

  <body>
   <% if flash[:notice] %>
      <p class="success"><%= flash[:notice] %></p>
    <% end %>

    <%= yield %>

    <footer>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
  </body>
</html>



